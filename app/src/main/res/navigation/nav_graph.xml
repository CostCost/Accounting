<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment"
    >
  <fragment
      android:id="@+id/mainFragment"
      android:label="Accounting"
      android:name="com.littlegnal.accounting.ui.main.MainFragment">
    <action
        android:id="@+id/action_mainFragment_to_add"
        app:destination="@id/addOrEditFragment"
        app:popUpTo="@id/mainFragment"
        />
    <action
        android:id="@+id/action_mainFragment_to_summaryFragment"
        app:destination="@id/summaryFragment"
        />
  </fragment>
  <fragment
      android:id="@+id/addOrEditFragment"
      android:label="Add/Edit"
      android:name="com.littlegnal.accounting.ui.addedit.AddOrEditFragment"
      />
  <fragment
      android:id="@+id/summaryFragment"
      android:label="Summary"
      android:name="com.littlegnal.accounting.ui.summary.SummaryFragment"
      />
</navigation>